{
  "version": "v1",
  "name": "tool-run-envelope",
  "endpoints": {
    "run": "POST /api/tools/{tool}/run",
    "status": "GET /api/tools/{tool}/runs/{runId}",
    "approve": "POST /api/tools/{tool}/runs/{runId}/approve"
  },
  "statuses": [
    "queued",
    "running",
    "completed",
    "failed",
    "needs_approval",
    "approved",
    "rejected"
  ],
  "request": {
    "idempotencyKey": "string",
    "input": {},
    "options": {
      "dryRun": false
    }
  },
  "response": {
    "runId": "string",
    "status": "queued",
    "submittedAt": "ISO-8601"
  }
}
